<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>ESCOLA</title>
    <%-include('logincss.ejs')%>
</head>
<body>
    <h1 class="position-absolute top-0 start-50 translate-middle mt-5">CADASTRO DE CURSOS</h1>
    <div class="bg-light p-3 text-bg-light col-5 col-md-8 position-absolute top-50 start-50 translate-middle border rounded-2">
        <form method="post">
            <div class="mb-3">
                <label for="aluno" class="form-label">Aluno</label>
                <input type="text" class="form-control" name="aluno" id="aluno">
            </div>
            <div class="mb-3">
                <label for="cursoid" class="form-label">Curso</label>
                <input type="text" class="form-control" name="cursoid" id="cursoid">
            </div>
            <div class="mb-3">
                <label for="duracao" class="form-label">Carga horaria do curso</label>
                <input class="form-control" type="number" name="duracao" id="duracao" min="0">
            </div>
            <div>
                <label for="avaliacao" class="form-label">Avaliação</label>
                <input type="text" class="form-control" name="avaliacao" id="avaliacao">
            </div>
            <div>
                <input type="reset" class="btn btn-secondary" value="Limpar">
                <input type="submit" class="btn btn-primary" value="Adicionar">
            </div>
        </form>
    </div>
    <%-include('cadjs.ejs') %>

</body>
</html>
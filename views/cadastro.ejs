<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>ESCOLA</title>
    <%-include('logincss.ejs') %>
       
</head>
<body>
<h1 class="position-absolute top-0 start-50 translate-middle mt-5" name="title1" id="title1">CADASTRO DE PROFESSORES</h1>
<div class="bg-light d-flex flex-column flex-grow-1 p-3 text-bg-light col-5 col-md-8 position-absolute top-50 start-50 translate-middle border rounded-2">    
    <form method="post" enctype="multipart/form-data">
        <div>
            <label class="form-label" for="email">Email</label>
            <input class="form-control type="email" name="email" id="email">
        </div>
        <div>
            <label class="form-label" for="nome">Nome</label>
            <input class="form-control" type="text" name="nome" id="nome">
        </div>
        <label class="form-label" for="matricula">Matricula</label>
            <input class="form-control" <%-"disabled"%> type="text" name="matricula" id="matricula" value="<%- "PR" + "-" + Math.floor(Math.random() * 100000000).toString()%>">
        <div>
            <label class="form-label" for="senha">Senha</label>
            <input class="form-control" type="password" name="senha" id="senha">
        </div>
        <label class="form-label" for="foto">Foto</label>
        <input class="form-control" type="file" name="foto" id="foto">
        <div>
            <label class="form-check-label" for="admin">Admin</label>
            <input  class="form-check-input" type="checkbox" value="admin" name="admin" id="admin">
        </div>
        <div>
            <input class="btn btn-secondary" type="reset" value="Limpar">
            <input class="btn btn-primary" type="submit" value="Adicionar">
        </div>
    </form>
</div>
    </body>
    <%-include('cadjs.ejs') %>
    </html>

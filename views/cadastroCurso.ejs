<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>ESCOLA</title>
    <%-include('logincss.ejs')%>
</head>
<body>
    <h1 class="position-absolute top-0 start-50 translate-middle mt-5">CADASTRO DE CURSOS</h1>
    <div class="bg-light p-3 text-bg-light col-5 col-md-5 position-absolute top-50 start-50 translate-middle border rounded-2">
        <form method="post">
            <div class="mb-3">
                <label for="nome" class="form-label">Nome do curso</label>
                <input type="text" class="form-control" name="nome" id="nome">
            </div>
            <div class="mb-3">
                <label for="cursoid" class="form-label">Id do curso</label>
                <input type="text" readonly class="form-control" name="cursoid" id="cursoid" value="CUR-<%= Math.floor(Math.random() * 100000000).toString() %>-<%- Date.now() %>">
            </div>
            <div class="mb-3 input-group">
                <label for="duracao" class="form-label me-2">Carga horaria do curso</label> </n>
                <input class="form-control" type="number" name="duracao" id="duracao" min="0">
                <span class="input-group-text">h</span>
            </div>
            <div class="mb-3">
                <label for="professor" class="form-label">Professor</label>
                <select multiple size="3" class="form-control" name="professor" id="professor">
                    <% professors.forEach(professor => { %>
                        <option value="<%= professor.matricula %>"><%= professor.nome %></option>
                    <% }); %>
                </select>
            </div>
            <div>
                <input type="reset" class="btn btn-secondary" value="Limpar">
                <input type="submit" class="btn btn-primary" value="Adicionar">
            </div>
        </form>
    </div>
    <%-include('cadjs.ejs') %>

</body>
</html>
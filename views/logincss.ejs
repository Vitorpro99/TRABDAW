        background-color: #333;
        color: #fff;
        border-color: #666;
    }
    .dark-mode .bg-light {
        background-color: #333 !important;
        color: #fff !important;
        border-color: #666 !important;
    }

    .dark-mode .btn {
        background-color: white;
        border-color: #555;
        color: #333;
    }
